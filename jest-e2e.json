{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./src",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["<rootDir>/**/*.{ts,tsx}"],
  "moduleNameMapper": {
    "^@modules/(.*)$": "<rootDir>/modules/$1",
    "^@common/(.*)$": "<rootDir>/common/$1"
  },
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
